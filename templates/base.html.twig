<!DOCTYPE html>
<html lang="fr">

	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="">

		<title>To Do List app</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
        <script src="https://kit.fontawesome.com/f9dc03a584.js" crossorigin="anonymous"></script>
	</head>

	<body>
		<header>
			{{ include('navbar.html.twig') }}
		</header>

		<!-- Page Content -->
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					{% for flash_message in app.flashes('success') %}
						<div class="alert alert-success" role="alert">
							<strong>Superbe !</strong>
							{{ flash_message }}
						</div>
					{% endfor %}
					{% for flash_message in app.flashes('error') %}
						<div class="alert alert-danger" role="alert">
							<strong>Oops !</strong>
							{{ flash_message }}
						</div>
					{% endfor %}

					{% block header_title %}{% endblock %}
					{% block header_img %}<div class="text-center mt-2"><img class="slide-image" src="{{ asset('img/todolist_homepage.jpg') }}" alt="todo list"></div>
					{% endblock %}
				</div>
			</div>

			<div class="row">
				<div class="col-md-12"> {% block body %}{% endblock %}
					</div>
				</div>
			</div>
			<!-- /.container -->

			<div class="container">

				<hr>
				<footer>
					<div class="row">
						<div class="col-lg-12">
							<p class="pull-right">Copyright &copy; OpenClassrooms</p>
						</div>
					</div>
				</footer>

			</div>
			{% block javascripts %}
				{{ encore_entry_link_tags('app') }}
			{% endblock %}
		</body>
	</html>
