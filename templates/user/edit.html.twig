{% extends 'base.html.twig' %}

{% block header_title %}<div class="text-center"><h1>Modification de l'utilisateur <strong>{{ user.username }}</strong></h1></div>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row w-50 text-center m-auto">
        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success mt-3">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
